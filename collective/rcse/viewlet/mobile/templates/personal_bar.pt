<tal:block tal:condition="python:view.user_actions and not view.anonymous">
<a href="#popup-personalbar" id="personalbar"
   data-rel="popup" data-role="button" data-inline="true"
   data-transition="fade" data-icon="user" data-iconpos="notext">Personal Menu</a>

<div data-role="popup" id="popup-personalbar" i18n:domain="plone">
    <ul data-role="listview" data-inset="true" data-icon="false">
        <li tal:repeat="action view/user_actions"
            tal:attributes="id string:personaltools-${action/id}">
          <a data-rel="popup"
             tal:attributes="href action/url"
             tal:content="action/title"
             i18n:translate="">Add</a></li>
	<li data-role="list-divider" i18n:translate="">Notifications</li>
	<li tal:repeat="notification view/notifications">
	  <tal:block tal:condition="notification/seen">
            <a tal:attributes="href notification/url" tal:content="notification/title" i18n:translate=""></a>
	  </tal:block>
	  <tal:block tal:condition="python: not notification['seen']">
            <a class="notification-not-seen" tal:attributes="href notification/url" tal:content="notification/title" i18n:translate=""></a>
	  </tal:block>
	</li>
	<li><a tal:attributes="href string:${view/navigation_root}/@@collective_whathappened_notifications_all" i18n:translate="">See all notifications</a></li>
    </ul>
</div>
</tal:block>
