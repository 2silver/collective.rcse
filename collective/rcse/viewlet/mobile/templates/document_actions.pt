<div tal:omit-tag=""
     i18n:domain="plone">

    <div class="documentActions" data-role="controlgroup" data-type="vertical" data-mini="true">
        <tal:docactions tal:condition="view/actions" tal:define="normalizeString nocall: context/@@plone/normalizeString">

                  <tal:action tal:repeat="daction view/actions"
                      tal:attributes="id python:'document-action-' + normalizeString(daction['id'])">
                      <a href="" data-role="button"
                         tal:attributes="href daction/url;
                                         target daction/link_target|nothing;
                                         title daction/description"
                         tal:content="daction/title">
                      </a>
                  </tal:action>
        </tal:docactions>

        <div tal:replace="structure provider:plone.documentactions" />

    </div>
</div>
