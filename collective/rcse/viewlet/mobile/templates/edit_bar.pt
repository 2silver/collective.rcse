<tal:wrapper tal:define="menus view/menus">
<div data-role="controlgroup" data-type="horizontal" id="edit-bar" data-mini="true" i18n:domain="plone">
        <a href="#popupAddContentMenu"
             data-role="button" data-rel="popup" data-transition="pop" data-icon="plus" data-theme="b"
             tal:condition="python:context.portal_type in ('Folder', 'collective.rcse.group')"
            i18n:translate="">Add</a>
        <tal:edit tal:repeat="action view/object_actions">
             <a tal:condition="python:action['id'] == 'edit'"
                tal:attributes="href action/url; title action/title"
                 data-role="button" data-icon="pencil"
                tal:content="action/title" i18n:translate=""></a>
        </tal:edit>
        <tal:delete tal:repeat="menu menus/plone_contentmenu_actions">
             <a tal:condition="python:menu['extra']['id'] == 'plone-contentmenu-actions-delete'"
                tal:attributes="href menu/action; title menu/description"
                 data-role="button" data-icon="remove"
                tal:content="menu/title" i18n:translate=""></a>
        </tal:delete>
        <a href="#popupWorkflowContentMenu" tal:condition="menus/plone_contentmenu_workflow"
            data-role="button" data-rel="popup" data-transition="pop" data-icon="lock"
           i18n:translate="">State</a>
</div>
<div data-role="popup" id="popupAddContentMenu" i18n:domain="plone">
  <ul data-role="listview" data-inset="true" data-icon="false">
      <li tal:repeat="menu menus/plone_contentmenu_factory">
        <a tal:attributes="href menu/action" tal:content="menu/title">menu</a>
      </li>
  </ul>
</div>
<div data-role="popup" id="popupWorkflowContentMenu" i18n:domain="plone" tal:condition="view/review_state">
  <ul data-role="listview" data-inset="true" data-icon="false">
      <li data-role="list-divider"><span i18n:translate="">label_state</span><span tal:content="view/review_state" i18n:translate="">published</span></li>
      <li tal:repeat="menu menus/plone_contentmenu_workflow">
        <a tal:attributes="href menu/action" tal:content="menu/title" i18n:translate="">menu</a>
      </li>
  </ul>
</div>
</tal:wrapper>