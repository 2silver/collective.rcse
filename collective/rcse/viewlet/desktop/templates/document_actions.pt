<div tal:omit-tag=""
     i18n:domain="plone">
  <div class="document-actions-wrapper">
    <div class="documentActions btn-group">
    <tal:docactions tal:condition="python:view.actions_icon or view.actions" tal:define="normalizeString nocall: context/@@plone/normalizeString">
      <tal:action tal:repeat="daction view/actions_icon"
                  tal:attributes="id python:'document-action-' + normalizeString(daction['id'])">
        <a tal:attributes="href daction/url;
                           id daction/id;
                           class string:action ${daction/id} btn btn-default;
                           target daction/link_target|nothing;
                           title daction/description;">
          <span tal:attributes="class string:${daction/icon}"></span> <tal:label tal:content="python:view.get_how_many(daction)"></tal:label>
        </a>
      </tal:action>
      <a class="action action-comments btn btn-default"
         tal:attributes="href string:${context/absolute_url}/@@trigger_display_comments"
         ><span class="icon-comments-alt"></span> <tal:label tal:content="view/get_how_many_comments"></tal:label>
      </a>
      <a class="action btn btn-default"
         tal:attributes="href view/context_state/view_url"><span class="icon-share-alt"></span></a>

<div class="btn-group" tal:condition="view/actions">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <span class="icon-caret-down"></span> <tal:label i18n:translate="">Action</tal:label>
  </button>
  <ul class="dropdown-menu" role="menu">
    <tal:action tal:repeat="daction view/actions">
      <li tal:attributes="id python:'document-action-' + normalizeString(daction['id'])">
        <a href="" data-role="button"
         tal:attributes="href daction/url;
                         id daction/id;
                         class string:action ${daction/id};
                         target daction/link_target|nothing;
                         title daction/description"
         tal:content="daction/title">
      </a></li>
    </tal:action>
  </ul>
</div>
</tal:docactions>
   </div>
       <div tal:condition="view/should_display_comments"
        tal:define="comments_view view/comments_view"
        tal:content="structure comments_view"></div>
  </div>
</div>
