<header class="navbar navbar-inverse navbar-fixed-top" role="navigation"
    i18n:domain="collective.rcse">

  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      <span class="sr-only" i18n:translate="">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" tal:attributes="href view/site_url" i18n:translate="">Home</a>
  </div>
  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="icon-sitemap"></span> <tal:label  i18n:translate="">Groups</tal:label></a>
        <ul class="dropdown-menu">
          <li>
            <a tal:attributes="href string:${view/portal_state/portal_url}/users_directory" i18n:translate="">Users directory</a>
          </li>
	      <li>
	         <a tal:attributes="href string:${view/portal_state/portal_url}/companies_directory" i18n:translate="">Companies directory</a>
	      </li>
        <li>
          <a data-toggle="modal" href="#rcseaddform">
             <span class="icon-plus"></span>
             <tal:label i18n:translate="">Add a group</tal:label>
          </a>
        </li>
        <li>
          <a tal:attributes="href string:${view/portal_state/navigation_root_url}/@@search?portal_type=collective.rcse.group&sort_on=sortable_title&b_size:int=100">
             <span class="icon-search"></span>
             <tal:label i18n:translate="">All groups</tal:label>
          </a>
        </li>
        <li class="divider" tal:condition="view/favorites"></li>
	<li i18n:translate="" tal:condition="view/favorites"
	    role="presentation" class="dropdown-header">Favorites</li>
        <li tal:repeat="tab view/favorites">
          <a tal:attributes="href tab/getURL; id string:portaltab-favorites-${tab/getId};"
             ><span class="icon-star"></span>
             <tal:label tal:content="tab/Title"></tal:label></a></li>
        <li class="divider" tal:condition="view/my_groups"></li>
	<li i18n:translate="" tal:condition="view/my_groups"
	    role="presentation" class="dropdown-header">My groups</li>
        <li tal:repeat="tab view/my_groups">
          <a tal:attributes="href tab/getURL;
                 id string:portaltab-registred-${tab/getId};"
             tal:content="tab/Title"></a>
	</li>
        <li class="divider" tal:condition="view/registred"></li>
	<li i18n:translate="" tal:condition="view/registred"
	    role="presentation" class="dropdown-header">Registred</li>
        <li tal:repeat="tab view/registred">
          <a tal:attributes="href tab/getURL;
                 id string:portaltab-registred-${tab/getId};"
             tal:content="tab/Title"></a></li>
        </ul>
      </li>
    </ul>
    <form class="navbar-form navbar-right" role="search" tal:attributes="action string:${view/site_url}/@@search">
      <div class="form-group">
        <input type="text" class="form-control" name="SearchableText" placeholder="Search" i18n:attributes="placeholder" tal:attributes="value request/SearchableText|nothing">
      </div>
    </form>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle user-menu" data-toggle="dropdown"
           ><span class="icon-user"></span> <span class="hidden-sm" tal:content="view/user_name">John</span></a>
          <ul class="dropdown-menu">
            <li tal:repeat="action view/user_actions"
                tal:attributes="id string:personaltools-${action/id}">
                <a href=""
                   tal:attributes="href action/url;
                               target action/link_target|nothing"
                   tal:content="action/title"
                   i18n:translate="">action title</a>
        </li>
        </ul>
      </li>
      <li id="notifications" tal:condition="python:not view.anonymous">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <span class="icon-bell"></span>
	  <span id="notifications-count"
		class="badge"
		tal:content="string:${view/unseenCount}"
		tal:condition="python:view.unseenCount > 0"></span>
        </a>
        <ul class="dropdown-menu">
	  <li tal:repeat="notification view/notifications">
	    <tal:block tal:condition="notification/seen">
	      <a tal:attributes="href notification/url" tal:content="notification/title" i18n:translate=""></a>
	    </tal:block>
	    <tal:block tal:condition="python: not notification['seen']">
	      <a class="notification-not-seen" tal:attributes="href notification/url" tal:content="notification/title" i18n:translate=""></a>
	    </tal:block>
	  </li>
	  <li><a tal:attributes="href string:${view/site_url}/@@collective_whathappened_notifications_all" i18n:translate="">See all notifications</a></li>
        </ul>
      </li>
    </ul>
  </div><!-- /.navbar-collapse -->
</header>
<div class="container">
  <div class="row">
    <div class="col-xs-4 col-sm-3 col-md-2" id="portal-logo">
      <div class="portal-logo-inner">
        <h1><a tal:attributes="href view/portal_state/navigation_root_url"
	       tal:content="view/portal_properties/site_properties/title">Logo</a></h1>
      </div>
    </div>
    <div class="col-xs-8 col-sm-2 col-md-2" id="addbutton">
        <div class="addbutton" tal:content="structure context/@@collective.rcse.addbutton"></div>
    </div>
    <div class="col-md-8 col-sm-7 col-xs-12 filters" id="portal-filters"
         i18n:domain="plone"
         tal:define="base_url view/group_url">
      <a tal:attributes="href string:${base_url}/videos_view" i18n:domain="collective.rcse">
        <div class="filter-wrapper filter-video pull-right">
          <span tal:attributes="class python:'%s icon-2x' % view.get_icon('video')"></span>
          <br />
          <span class="text" i18n:translate="">Video</span>
        </div>
      </a>
      <a tal:attributes="href string:${base_url}/images_view">
        <div class="filter-wrapper filter-image pull-right">
          <span tal:attributes="class python:'%s icon-2x' % view.get_icon('image')"></span>
          <br />
          <span class="text" i18n:translate="">Image</span>
        </div>
      </a>
      <a tal:attributes="href string:${base_url}/files_view">
        <div class="filter-wrapper filter-file pull-right">
          <span tal:attributes="class python:'%s icon-2x' % view.get_icon('file')"></span>
          <br />
          <span class="text" i18n:translate="">File</span>
        </div>
      </a>

      <a tal:attributes="href string:${base_url}/events_view">
        <div class="filter-wrapper filter-event pull-right">
          <span tal:attributes="class python:'%s icon-2x' % view.get_icon('event')"></span>
          <br />
          <span class="text" i18n:translate="">Event</span>
        </div>
      </a>
      <a tal:attributes="href string:${base_url}/etherpads_view" i18n:domain="collective.rcse">
        <div class="filter-wrapper filter-discussion pull-right">
          <span tal:attributes="class python:'%s icon-2x' % view.get_icon('etherpad')"></span>
          <br />
          <span class="text" i18n:translate="">Etherpad</span>
        </div>
      </a>
      <a tal:attributes="href string:${base_url}/discussions_view" i18n:domain="collective.rcse">
        <div class="filter-wrapper filter-discussion pull-right">
          <span tal:attributes="class python:'%s icon-2x' % view.get_icon('discussion')"></span>
          <br />
          <span class="text" i18n:translate="">Discussion</span>
        </div>
      </a>

      <a tal:attributes="href string:${base_url}/links_view">
        <div class="filter-wrapper filter-link pull-right">
          <span tal:attributes="class python:'%s icon-2x' % view.get_icon('signet')"></span>
          <br />
          <span class="text" i18n:translate="">Link</span>
        </div>
      </a>
      <a tal:attributes="href string:${base_url}/blog_view">
        <div class="filter-wrapper filter-blog pull-right">
          <span tal:attributes="class python:'%s icon-2x' % view.get_icon('news')"></span>
          <br />
          <span class="text" i18n:translate="">News Item</span>
        </div>
      </a>
      <a tal:attributes="href base_url" i18n:domain="collective.rcse">
        <div class="filter-wrapper filter-blog pull-right">
          <span tal:attributes="class python:'%s icon-2x' % view.get_icon('timeline')"></span>
          <br />
          <span class="text" i18n:translate="">Timeline</span>
          </div>
        </a>
    </div>
  </div>
</div>
