<div class="vcard" data-form="ui-body-b" data-theme="b">
   <img class="photo" tal:attributes="src view/photo; alt string:photo"/>
   <a class="fn url" data-form="ui-body-b" data-theme="b" rel="me"
      tal:attributes="href view/url"
      tal:content="view/formated_name">
    John Smith
   </a><br />
   <span tal:condition="view/organization" class="org" tal:content="view/organization">Organization</span>
   <span tal:condition="view/title" class="title" tal:content="view/title">Title / Function</span>
   <span tal:condition="view/email_pro" class="email" tal:content="view/email_pro"></span>
   <span tal:condition="view/phone" class="tel" tal:content="view/phone"></span>
</div>