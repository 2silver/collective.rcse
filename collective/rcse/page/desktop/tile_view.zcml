      for="*"
      name="tile_view"
      class="collective.rcse.page.controller.timeline_item_view.TimelineItemView"
      template="templates/tile_default_view.pt"
      permission="zope2.View"
      layer="collective.rcse.layer.DesktopLayer"
      />

