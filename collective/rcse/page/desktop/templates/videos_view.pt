<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">

<body>
<metal:override fill-slot="top_slot"
    tal:define="disable_column_two python:request.set('disable_plone.rightcolumn',1);"/>

<div metal:fill-slot="main">
    <div tal:replace="structure context/@@breadcrumb_view"></div>
    <div tal:define="videos python:view.get_content(batch=True, full=False)">

    <ul class="list-group">
        <li class="list-group-item" tal:repeat="video videos">
            <div class="media">
                <div class="pull-left" href="#"> DATE
                </div>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a class="load-content-tile-in-modal content-title" data-toggle="modal"
                            href="#content-modal" tal:attributes="data-href video/getURL"
                            tal:content="video/Title">Media heading</a>
                    </h4>
                    <p tal:content="video/Description">Description</p>
                </div>
            </div>
        </li>
    </ul>
    
    </div>
    <!-- Modal -->
    <div class="modal fade" id="content-modal" tabindex="-1" role="dialog"
        aria-labelledby="content modal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                     <div class="rcse_tile_wrapper">
                       <a class="rcse_tile">test</a>
                     </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                        data-dismiss="modal" i18n:translate="">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>

<div id="portal-column-one" class="col-md-3 col-mg-3"
    metal:fill-slot="column_one_slot">
    <nav role="navigation" class="navbar navbar-inverse">
      <div class="navbar-brand" i18n:translate="" tal:content="view/label">Add image</div>
    </nav>
    <div tal:content="structure view/form_instance"></div>
</div>

</body>
</html>
