<html tal:omit-tag="" i18n:domain="collective.rcse">
<a data-toggle="modal" href="#rcsefiltersform" class="btn btn-default btn-lg"
   title="Open filter form" i18n:attributes="title">
  <i class="icon-location-arrow"></i>
  <span i18n:translate="">Go to</span>
</a>
<div class="modal fade" id="rcsefiltersform" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" i18n:translate="">Go to</h4>
        </div>
        <div class="modal-body" id="filtersbuttons" tal:define="base_url view/group_url">

          <div class="filter-wrapper filter-timeline_view">
	    <a tal:attributes="href string:${base_url}/timeline_view"
	       title="Display all items in a timeline"
	       i18n:attributes="title" i18n:domain="adria.rcse">
	      <div>
		<span tal:attributes="class python:'%s icon-2x' % view.get_icon('timeline')"></span>
		<br />
		<span class="text" i18n:translate="">Timeline</span>
	      </div>
            </a>
          </div>
          <div class="filter-wrapper filter-articles_view">
	    <a tal:attributes="href string:${base_url}/articles_view"
	       title="Filter: Display only articles in a dedicated screen"
	       i18n:attributes="title" i18n:domain="adria.rcse">
	      <div>
		<span tal:attributes="class python:'%s icon-2x' % view.get_icon('article')"></span>
		<br />
		<span class="text" i18n:translate="">Articles</span>
	      </div>
	    </a>
          </div>
          <div class="filter-wrapper filter-links_view">
	    <a tal:attributes="href string:${base_url}/links_view"
	       title="Filter: Display only links in a dedicated screen"
	       i18n:attributes="title" i18n:domain="adria.rcse">
	      <div>
		<span tal:attributes="class python:'%s icon-2x' % view.get_icon('signet')"></span>
		<br />
		<span class="text" i18n:translate="">Links</span>
	      </div>
	    </a>
          </div>
          <div class="filter-wrapper filter-discussion_view">
	    <a tal:attributes="href string:${base_url}/discussions_view"
	       title="Filter: Display only discussions in a dedicated screen"
	       i18n:attributes="title" i18n:domain="adria.rcse">
	      <div>
		<span tal:attributes="class python:'%s icon-2x' % view.get_icon('discussion')"></span>
		<br />
		<span class="text" i18n:translate="">Discussions</span>
	      </div>
	    </a>
          </div>
          <div class="filter-wrapper filter-etherpads_view">
	    <a tal:attributes="href string:${base_url}/etherpads_view"
	       title="Filter: Display only etherpads in a dedicated screen"
	       i18n:attributes="title" i18n:domain="adria.rcse">
	      <div>
		<span tal:attributes="class python:'%s icon-2x' % view.get_icon('etherpad')"></span>
		<br />
		<span class="text" i18n:translate="">Etherpads</span>
	      </div>
	    </a>
          </div>
          <div class="filter-wrapper filter-event_listing">
	    <a tal:attributes="href string:${base_url}/event_listing"
	       title="Filter: Display only events in a dedicated screen"
	       i18n:attributes="title" i18n:domain="adria.rcse">
	      <div>
		<span tal:attributes="class python:'%s icon-2x' % view.get_icon('event')"></span>
		<br />
		<span class="text" i18n:translate="">Events</span>
	      </div>
	    </a>
          </div>
          <div class="filter-wrapper filter-files_view">
	    <a tal:attributes="href string:${base_url}/files_view"
	       title="Filter: Display only files in a dedicated screen"
	       i18n:attributes="title" i18n:domain="adria.rcse">
	      <div>
		<span tal:attributes="class python:'%s icon-2x' % view.get_icon('file')"></span>
		<br />
		<span class="text" i18n:translate="">Files</span>
	      </div>
	    </a>
          </div>
          <div class="filter-wrapper filter-images_view">
	    <a tal:attributes="href string:${base_url}/images_view"
	       title="Filter: Display only images in a dedicated screen"
	       i18n:attributes="title" i18n:domain="adria.rcse">
	      <div>
		<span tal:attributes="class python:'%s icon-2x' % view.get_icon('image')"></span>
		<br />
		<span class="text" i18n:translate="">Images</span>
	      </div>
	    </a>
          </div>
          <div class="filter-wrapper filter-videos_view">
	    <a tal:attributes="href string:${base_url}/videos_view"
	       title="Filter: Display only videos in a dedicated screen"
	       i18n:attributes="title" i18n:domain="adria.rcse">
	      <div>
		<span tal:attributes="class python:'%s icon-2x' % view.get_icon('video')"></span>
		<br />
		<span class="text" i18n:translate="">Videos</span>
	      </div>
	    </a>
          </div>

	</div>
      </div>
    </div>
</div>
</html>
