<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">
<body>
<metal:override fill-slot="top_slot" />

  <div metal:fill-slot="content-core">

    <div tal:replace="structure context/@@breadcrumb_view"></div>

    <div id="links-view"
         tal:define="b_start python:0;
                     b_start request/b_start | b_start;
                     links python: view.get_content(b_start=b_start, full=True)"
         tal:condition="python: len(links) > 0">

      <table data-role="table" id="links-table">
	<thead>
	  <tr>
	    <th i18n:translate="">Title</th>
	    <th i18n:translate="">Description</th>
	    <th i18n:translate="">Url</th>
	  </tr>
	</thead>
	<tbody>
	  <tr tal:repeat="link links">
	    <td tal:content="link/title"></td>
	    <td tal:content="link/description"></td>
	    <td><a tal:attributes="href link/remoteUrl"
		   tal:content="link/remoteUrl"></a></td>
	  </tr>
	</tbody>
      </table>
      <div metal:use-macro="context/batch_macros/macros/navigation" />
    </div>
  </div>

  <div id="portal-column-one" class="col-md-3 col-mg-3"
       metal:fill-slot="column_one_slot">
    <nav role="navigation" class="navbar navbar-inverse">
      <div class="navbar-brand" i18n:translate="" tal:content="view/label">Add image</div>
    </nav>
    <div tal:content="structure view/form_instance"></div>
  </div>
</body>
</html>
