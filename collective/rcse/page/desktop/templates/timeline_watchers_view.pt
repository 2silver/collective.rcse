<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">

<body>
  <div metal:fill-slot="main" tal:define="auth_memberinfo context/auth_memberinfo">
    <tal:main-macro metal:define-macro="main">

    <h3 class="documentFirstHeader" i18n:translate="">My space</h3>
    <div id="viewlet-above-content" tal:content="structure provider:plone.abovecontent" tal:condition="not:ajax_load" />
    <nav role="navigation" class="navbar navbar-inverse">
       <div class="navbar-brand">
         <h4 class="documentFirstHeading" i18n:translate="">My profile</h4>
       </div>
    </nav>
    <div class="panel panel-default" tal:define="memberinfo context/@@auth_memberinfo">
        <div class="panel-body">
            <div class="media">
                <a class="pull-left" href="#" tal:attributes="href memberinfo/url">
                    <img class="media-object avatar" tal:attributes="src memberinfo/photo"/>
                </a>
                <div class="media-body">
                    <h4 class="media-heading"><a tal:attributes="href memberinfo/url" tal:content="memberinfo/fullname">Fullname</a></h4>
                    <p tal:define="bio memberinfo/bio" tal:condition="bio" tal:content="bio"></p>
                </div>
            </div>
        </div>
    </div>
    <nav role="navigation" class="navbar navbar-inverse">
       <div class="navbar-brand">
         <h4 class="documentFirstHeading" i18n:translate="">My news</h4>
       </div>
    </nav>
    <div tal:define="b_start python:0;
                     b_start request/b_start | b_start;
                     batch python: view.get_content(b_start=b_start);">
        <tal:tile tal:repeat="item batch">
         <div class="rcse_tile_wrapper">
           <a class="rcse_tile" tal:attributes="href item/getURL"></a>
         </div>
        </tal:tile>
        <div metal:use-macro="context/batch_macros/macros/navigation" />
    </div>

    </tal:main-macro>
  </div>
</body>
</html>