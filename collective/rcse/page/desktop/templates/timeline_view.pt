<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">

<body>
<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main">

    <div tal:replace="structure context/@@breadcrumb_view"></div>
    <div id="viewlet-above-content"
         tal:content="structure provider:plone.abovecontent"
         tal:condition="not:ajax_load" />
    <tal:group tal:condition="nocall:view/group">
    <nav role="navigation" class="navbar navbar-inverse">
       <div class="navbar-brand">
         <h4 class="documentFirstHeading" i18n:translate=""
             tal:content="view/group_title">My profile / Group title</h4>
       </div>
    </nav>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="media">
                <a class="pull-left" href="#" tal:attributes="href view/group_url">
                    <img class="media-object avatar"
                         tal:attributes="src view/group_photo"/>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">
                      <a tal:attributes="href view/group_url"
                         tal:content="view/group_title">Fullname / Group title</a></h4>
                    <p tal:define="desc view/group_description"
                       tal:condition="desc" tal:content="desc"></p>
                </div>
            </div>
        </div>
        <div class="panel-footer" tal:condition="python: view.group_actions is not None or view.group_edit_bar is not None">
            <div class="pull-right" tal:condition="view/group_edit_bar"
                 tal:content="structure view/group_edit_bar"></div>
            <div class="document-actions-wrapper"
                 tal:content="structure view/group_actions"></div>
            <div tal:condition="python:view.group_actions is None">&nbsp;</div>
        </div>
    </div>
    </tal:group>
    <div id="viewlet-above-content" tal:content="structure provider:plone.abovecontent"
         tal:condition="not:ajax_load" />

    <nav role="navigation" class="navbar navbar-inverse"
         tal:condition="not:view/is_content_timeline">
       <div class="navbar-brand">
         <h4 class="documentFirstHeading" i18n:translate="">News</h4>
       </div>
    </nav>
    <div tal:define="b_start python:0; b_start request/b_start | b_start;
                     batch python: view.get_content(b_start=b_start);">
        <tal:tile tal:repeat="item batch">
         <div class="rcse_tile_wrapper">
           <a class="rcse_tile" tal:attributes="href item/getURL"></a>
         </div>
        </tal:tile>
        <div metal:use-macro="context/batch_macros/macros/navigation" />
    </div>

    </tal:main-macro>
  </div>
</body>
</html>