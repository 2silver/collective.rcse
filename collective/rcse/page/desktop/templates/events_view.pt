<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">

<body>
<metal:override fill-slot="top_slot"
    tal:define="disable_column_two python:request.set('disable_plone.rightcolumn',1);"/>

<div metal:fill-slot="main">
    <div tal:replace="structure context/@@breadcrumb_view"></div>
  <div class="event_listing"
       tal:define="batch python:view.events(ret_mode=3);
                   mode request/mode|string:future;
                   toLocalizedTime nocall: context/@@plone/toLocalizedTime;
                   show_filter python:not (view.is_collection or view.is_topic);">
    <header>
        <tal:title tal:define="headers view/header_string">
          <h1 tal:content="headers/main"></h1>
          <h2 tal:condition="headers/sub" tal:content="headers/sub"></h2>
        </tal:title>
      <nav class="navbar navbar-default">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-events">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>
  <div class="collapse navbar-collapse navbar-events" i18n:domain="plone.app.event">
        <ul class="mode_selector nav navbar-nav">
          <tal:cond condition="show_filter">
          <li class="" tal:attributes="class python:mode=='future' and 'active' or ''">
            <a class="mode_future"   href="" tal:attributes="href view/mode_future_url"   i18n:translate="mode_future_link">Upcoming</a>
          </li>
          <li class="" tal:attributes="class python:mode=='past' and 'active' or ''">
            <a class="mode_past"   href="" tal:attributes="href view/mode_past_url"   i18n:translate="mode_past_link">Past</a>
          </li>
          <li class="" tal:attributes="class python:mode=='month' and 'active dropdown' or ''">
            <a class="mode_month" href="" tal:attributes="href view/mode_month_url" i18n:translate="mode_month_link">Month</a>
          </li>
          <li class="" tal:attributes="class python:mode=='week' and 'active' or ''">
            <a class="mode_week"  href="" tal:attributes="href view/mode_week_url"  i18n:translate="mode_week_link">Week</a>
          </li>
          <li class="" tal:attributes="class python:mode=='day' and 'active' or ''">
            <a class="mode_day"   href="" tal:attributes="href view/mode_day_url"   i18n:translate="mode_day_link">Day</a> <input id="event_listing_calendar" type="hidden" />
          </li>
          </tal:cond>
          <li>
            <a class="mode_ical"  href="" tal:attributes="href view/ical_url"
               title="Download this event in iCal format"
               i18n:attributes="title title_add_to_ical;">
                <i class="icon-download"></i>
                <span i18n:translate="label_add_to_ical">iCal</span></a>

          </li>
        </ul>
        </div>
      </nav>
      <div class="visualClear"/>
      <tal:cond condition="show_filter" i18n:domain="plone.app.event">
        <tal:month condition="python:mode=='month'">
        <div class="btn-group">
          <a class="prev_month btn btn-default" href="" tal:attributes="href view/prev_month_url"><i class="icon-double-angle-left"></i> <span i18n:translate="prev_month_link">Previous Month</span></a>
          <a class="this_month btn btn-default" href="" tal:attributes="href view/this_month_url" i18n:translate="this_month_link">This Month</a>
          <a class="next_month btn btn-default" href="" tal:attributes="href view/next_month_url"><span i18n:translate="next_month_link">Next Month</span> <i class="icon-double-angle-right"></i></a>
        </div>
        </tal:month>
        <tal:week condition="python:mode=='week'">
        <div class="btn-group">
          <a class="prev_week btn btn-default"  href="" tal:attributes="href view/prev_week_url"><i class="icon-angle-left"></i> <span i18n:translate="prev_week_link">Previous Week</span></a>
          <a class="this_week btn btn-default"  href="" tal:attributes="href view/this_week_url"  i18n:translate="this_week_link">This Week</a>
          <a class="next_week btn btn-default"  href="" tal:attributes="href view/next_week_url"><span i18n:translate="next_week_link">Next Week</span> <i class="icon-angle-right"></i></a>
        </div>
        </tal:week>
        <tal:day condition="python:mode in ('day', 'today')">
        <div class="btn-group">
          <a class="prev_day btn btn-default"   href="" tal:attributes="href view/prev_day_url"><i class="icon-caret-left"></i> <span i18n:translate="prev_day_link">Previous Day</span></a>
          <a class="today btn btn-default"      href="" tal:attributes="href view/today_url"      i18n:translate="today_link">Today</a>
          <a class="next_day btn btn-default"   href="" tal:attributes="href view/next_day_url"><span i18n:translate="next_day_link">Next Day</span> <i class="icon-caret-right"></i></a>
        </div>
        </tal:day>
        </tal:cond>

    </header>
    <section>

    <ul class="list-group">
        <li class="list-group-item" tal:repeat="data batch">
            <div class="media">
                <div class="pull-left">
        <tal:date tal:replace="structure python:view.formatted_date(data)"/>
		</div>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a class="load-content-tile-in-modal content-title" data-toggle="modal"
                            href="#content-modal" tal:attributes="data-href data/getURL"
                            tal:content="data/title">Title</a>
			<span> - </span>
			<a tal:define="memberinfo data/context/@@creator_memberinfo"
			   tal:attributes="href memberinfo/url"
               class="author fn url"
               tal:content="memberinfo/fullname">Author</a>
                    </h4>
                    <p tal:content="data/description">Description</p>
                </div>
            </div>
        </li>
    </ul>
    </section>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="content-modal" tabindex="-1" role="dialog"
        aria-labelledby="content modal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                     <div class="rcse_tile_wrapper">
                       <a class="rcse_tile">test</a>
                     </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                        data-dismiss="modal" i18n:translate="">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>

<div id="portal-column-one" class="col-md-3 col-mg-3"
    metal:fill-slot="column_one_slot">
  <div class="portletWrapper">
    <div tal:replace="structure context/@@calendar_events_view"></div>
  </div>
  <div>
    <nav role="navigation" class="navbar navbar-inverse">
      <div class="navbar-brand" i18n:translate="" tal:content="view/label">Add event</div>
    </nav>
    <div tal:content="structure view/form_instance"></div>
  </div>
</div>

</body>
</html>
