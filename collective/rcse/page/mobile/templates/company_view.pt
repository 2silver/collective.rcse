<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">

<body>
  <div metal:fill-slot="content-core" class="directory-wrapper">
    <tal:main-macro metal:define-macro="content-core">
      <div class="ui-grid-a ui-responsive">
        <div class="ui-block-a">
          <img class="logo"
         tal:condition="context/logo"
         tal:define="scales context/@@images;
               scale python: scales.scale('logo', width=128, height=128);"
         tal:replace="structure scale/tag"/>
          <h3>Company information</h3>
          <p tal:condition="context/description" tal:content="context/description"></p>
          <div i18n:translate="">Corporate name</div><div tal:content="context/corporate_name"></div>
          <div i18n:translate="">Sector</div><div tal:content="context/sector"></div>
          <div tal:condition="context/service"><div i18n:translate="">Sector</div><div tal:content="context/service"></div></div>
          <div tal:condition="context/turnover"><div i18n:translate="">Turnover</div><div tal:content="context/turnover"></div></div>
