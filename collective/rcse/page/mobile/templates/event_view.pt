<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">
<body>
  <div metal:fill-slot="content-core" class="directory-wrapper" tal:define="data nocall:view/data">

  <ul data-role="listview">
    <li data-role="list-divider" i18n:translate="">What</li>
    <li tal:condition="data/event_url|nothing">
      <a tal:attributes="href data/event_url" target="_blank"><span class="icon-external-link" i18n:translate="external_website" i18n:domain="plone.app.event">Visit external website</span></a>
    </li>
    <li tal:condition="context/urlMedia|nothing">
      <a tal:attributes="href context/urlMedia"><span class="icon-film"></span>Media</a>
    </li>
    <li data-role="list-divider" i18n:translate="">When</li>
    <li><tal:date replace="structure python:view.formatted_date(context)" /></li>
    <li data-role="list-divider" i18n:translate="">Where</li>
    <li tal:condition="python: context.urlGMaps or data.location">
       <a tal:condition="context/urlGMaps" data-icon="map-marker" tal:attributes="href context/urlGMaps"><span class="icon-map-marker" tal:content="data/location" i18n:translate=""></span></a>
       <span tal:condition="not:context/urlGMaps" class="icon-map-marker" tal:content="data/location"></span>
    </li>
    <tal:contact tal:define="contact_email data/contact_email;
                             contact_name data/contact_name;
                             contact_phone data/contact_phone">
    <li tal:condition="python:contact_email or contact_name or contact_phone"
        data-role="list-divider" i18n:translate="">Contact</li>
    <li tal:condition="python:contact_name and not contact_email">
        <span class="icon-user" tal:content="contact_name"></span>
    </li>
    <li tal:condition="python:contact_email and not contact_name">
        <a tal:condition="contact_email"
          tal:replace="structure python: context.spamProtect(mailaddress=contact_email, mailname=contact_email, cssclass='icon-envelope')">
          email
       </a>
    </li>
    <li tal:condition="python:contact_email and contact_name">
        <a tal:condition="contact_email"
          tal:replace="structure python: context.spamProtect(mailaddress=contact_email, mailname=contact_name, cssclass='icon-envelope')">
          email
       </a>
    </li>
    <li tal:condition="contact_phone">
        <a class="icon-phone" tal:attributes="href string:tel:${contact_phone}" tal:content="contact_phone"></a>
    </li>
    </tal:contact>
  </ul>
  <div class="ui-grid-a ui-responsive">
    <div class="ui-block-a">
      <div class="picturefill-wrapper" tal:content="structure context/@@picturefill"></div>
    </div>
    <div class="ui-block-b">
      <tal:txt replace="structure data/text" />
    </div>
  </div>

  </div>
</body>
</html>
