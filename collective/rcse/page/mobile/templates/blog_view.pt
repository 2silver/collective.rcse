<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">
<body>
  <div metal:fill-slot="content-core" class="directory-wrapper">
    <div tal:define="b_start python:0;
                     b_start request/b_start | b_start;
                     batch python: view.get_content(b_start=b_start, b_size=3)">
      <tal:news tal:repeat="brain batch">
        <div class="news" tal:define="item brain/getObject">
          <div class="image">
            <img tal:condition="item/image"
                 tal:define="scales item/@@images;
                             scale python: scales.scale('image', width=128, height=128);"
                 tal:replace="structure scale/tag" />
            <p tal:condition="item/image_caption"
               tal:content="item/image_caption"></p>
          </div>
          <h2 tal:content="item/title">Title</h2>
          <div tal:condition="item/text"
               tal:content="structure item/text/output"
               class="news-content">
          </div>
        </div>
      </tal:news>
      <div metal:use-macro="context/batch_macros/macros/navigation" />
    </div>
  </div>
</body>
</html>
