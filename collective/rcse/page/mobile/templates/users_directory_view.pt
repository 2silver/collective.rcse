<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">
<body>
  <div metal:fill-slot="content-core" class="directory-wrapper">
    <tal:main-macro metal:define-macro="content-core">
      <div class="directory" tal:define="members view/getMembers">
      <ul data-role="listview" data-filter="true" data-autodividers="true"
          i18n:attributes="data-filter-placeholder" data-filter-placeholder="Search members">
         <li tal:repeat="member members">
           <a tal:attributes="href member/url">
             <img tal:attributes="src member/photo"/>
             <h2 tal:content="string:${member/first_name} ${member/last_name}"></h2>
             <p tal:content="string:${member/function} ${member/company} ${member/city}"></p>
           </a>
         </li>
       </ul>
      </div>
    </tal:main-macro>
  </div>
</body>
</html>
