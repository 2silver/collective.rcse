<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">
<body>
  <div metal:fill-slot="main" class="directory-wrapper">
    <tal:main-macro metal:define-macro="main">
          <div id="viewlet-above-content" tal:content="structure provider:plone.abovecontent" />
          <div id="viewlet-above-content-title"
               tal:content="structure provider:plone.abovecontenttitle" />

          <div id="viewlet-above-content-body"
               tal:content="structure provider:plone.abovecontentbody" />

<div class="rcse_tile_wrapper" style="min-height:100px" tal:condition="nocall:view/group">
    <div class="rcsetile" id="eb87ae4601c14e409c3da8eef1f92b14">
        <div class="vcard">
            <img class="photo" tal:attributes="src view/group_photo"/>
            <a tal:attributes="href view/group_url"
               tal:content="view/group_title">Fullname / Group title</a>
            <p tal:define="desc view/group_description"
               tal:condition="desc" tal:content="desc"></p>
        </div>
        <div class="panel-footer" tal:condition="view/group_actions">
            <div class="pull-right" tal:condition="view/group_edit_bar"
                 tal:content="structure view/group_edit_bar"></div>
            <div class="document-actions-wrapper"
                 tal:content="structure view/group_actions"></div>
        </div>

    </div>
</div>

      <div tal:define="b_start python:0; b_start request/b_start | b_start;
                     batch python: view.get_content(b_start=b_start, b_size=4);">
        <tal:tile tal:repeat="item batch">
          <div class="rcse_tile_wrapper">
              <a class="rcse_tile" tal:attributes="href item/getURL"></a>
          </div>
        </tal:tile>
        <div metal:use-macro="context/batch_macros/macros/navigation" />
      </div>

    </tal:main-macro>
  </div>
</body>
</html>
