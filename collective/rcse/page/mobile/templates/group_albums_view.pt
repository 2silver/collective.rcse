<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="collective.rcse">
<body>
  <div metal:fill-slot="content-core" class="directory-wrapper">
    <div class="ui-grid-b ui-responsive">
      <tal:image tal:define="images python: view.get_content(batch=False, object=True)"
		 tal:repeat="key python: range(len(images))">
	<div tal:define="image python: images[key]"
	     tal:attributes="class python: (key % 3 == 0 and 'ui-block-a'
			     or (key % 3 == 1 and 'ui-block-b' or 'ui-block-c'))
			     + ' image-block';">
	  <a tal:attributes="href image/absolute_url">
	    <img tal:define="scales image/@@images;
			     scale python: scales.scale('image', width=128, height=128)"
		 tal:replace="structure scale/tag" />
	  </a>
	  <p tal:content="image/title"></p>
	</div>
      </tal:image>
    </div>
  </div>
</body>
</html>
